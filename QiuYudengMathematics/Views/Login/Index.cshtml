@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @*<script src="~/Scripts/vue-2.6.14.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>
    @Styles.Render("~/css/login.css")
</head>
<body>
    <div id="app" class="layout__container" style="text-align:center;">
        <div class="layout__txt">
            <h1>{{message}}</h1>
        </div>
        <div class="layout__login">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <span>帳號：</span><input type="text" name="Account" />
                <br />
                <span>密碼：</span><input type="password" name="Password" />
                <br /><br />
                <input type="submit" value="Login" />
            }
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    const app = new Vue({
        el: '#app',
        data: {
            message: 'Hello Worldy'
        },
    });
</script>